<% content_for :title do %>
  <%= t("title", scope: "decidim.admin.theme_maker") %>
<% end %>

<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t("actions.edit", scope: "decidim.admin.theme_maker") %>
    </h2>
  </div>

  <div class="card-section">
    <%= decidim_form_for(@form, url: decidim_admin_theme_maker_path(@form.id), method: :patch, html: { class: "form theme_maker_form" }) do |form| %>
      <%= render partial: "form", locals: { form: form } %>

      <div class="button--double form-general-submit">
        <%= form.submit t("actions.update", scope: "decidim.admin.theme_maker") %>
      </div>
    <% end %>
  </div>
</div> 